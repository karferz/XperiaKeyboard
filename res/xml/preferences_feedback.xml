    </PreferenceCategory>
    <PreferenceCategory android:title="@string/textinput_strings_settings_visual_section" android:key="@string/key_personalizer_category_visual_feedback">
        <SwitchPreference android:persistent="true" android:title="@string/textinput_strings_settings_enable_key_preview" android:key="@string/key_key_preview" android:defaultValue="@bool/key_preview_default" />
    </PreferenceCategory>
</PreferenceScreen>