<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/keyboard_height_picker_handle_main_pressed" />
            <size android:height="@dimen/keyboard_height_handle_size" android:width="@dimen/keyboard_height_handle_size" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <stroke android:width="2.0dip" android:color="@color/keyboard_height_picker_handle_border" />
            <solid android:color="@color/keyboard_height_picker_handle_main_unpressed" />
            <size android:height="@dimen/keyboard_height_handle_size" android:width="@dimen/keyboard_height_handle_size" />
        </shape>
    </item>
</selector>